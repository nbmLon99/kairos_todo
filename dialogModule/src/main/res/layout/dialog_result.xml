<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    >
    <RelativeLayout
        android:background="@drawable/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        >


        <!-- Content Frame -->
        <LinearLayout
            android:layout_marginHorizontal="40dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/dl_res_btnFrmae"
            >

            <TextView
                android:id="@+id/dl_res_month"
                android:background="@color/trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"


                android:text="YearMonth"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:focusable="true"

                android:textSize="20dp"
                android:fontFamily="@font/naver_wjddms"
                android:textColor="@color/signature_blue"

                />


            <!-- Last Result Image -->
            <ImageView
                android:id="@+id/dl_res_mainImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="4dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <!-- Total Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/dl_smr_totalCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TotalDay Count"
                            android:textColor="@color/mainTextColor"
                            android:textSize="15dp"
                            />
                    </LinearLayout>


                    <!-- Win Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:src="@color/WIN_COLOR"
                            android:layout_marginVertical="1dp"
                            android:layout_marginHorizontal="5dp"

                            />
                        <TextView
                            android:id="@+id/dl_smr_winCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TotalDay Count"
                            android:textColor="@color/mainTextColor"
                            android:textSize="13dp"
                            />
                    </LinearLayout>

                    <!-- Drw Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginVertical="1dp"
                            android:src="@color/DRW_COLOR"
                            android:layout_marginHorizontal="5dp"

                            />
                        <TextView
                            android:id="@+id/dl_smr_drwCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TotalDay Count"
                            android:textColor="@color/mainTextColor"
                            android:textSize="13dp"
                            />
                    </LinearLayout>

                    <!-- Los Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="1dp"
                            android:background="@color/white"
                            android:src="@color/LOS_COLOR"
                            android:layout_marginHorizontal="5dp"

                            />
                        <TextView
                            android:id="@+id/dl_smr_losCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TotalDay Count"
                            android:textColor="@color/mainTextColor"
                            android:textSize="13dp"
                            />
                    </LinearLayout>



                </LinearLayout>

            </ScrollView>


            <!-- Sep Line -->
            <ImageView
                android:src="@color/signature_blue"
                android:layout_gravity="center_horizontal"
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:layout_marginTop="-2dp"

                />


        </LinearLayout>




        <!-- Button Frmae -->
        <LinearLayout
            android:id="@+id/dl_res_btnFrmae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp"

            >

            <TextView
                android:id="@+id/dl_res_btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="13dp"
                android:padding="5dp"
                android:textColor="@color/mainTextColor"
                android:gravity="center"

                android:text="삭제"
                />

            <!-- Sep Line -->
            <ImageView
                android:src="@color/signature_blue"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="2dp"
                android:layout_marginVertical="8dp"

                />


            <TextView
                android:id="@+id/dl_res_btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="13dp"
                android:padding="5dp"
                android:textColor="@color/mainTextColor"
                android:gravity="center"

                android:text="저장"
                />


        </LinearLayout>



    </RelativeLayout>




</FrameLayout>