<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <!-- main color -->
    <item
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="1.5dp"
        >
        <shape>
            <solid android:color="@color/boundaryColor" />
        </shape>
    </item>

    <!-- draw another block to cut-off the left and right bars -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"

        >
        <shape>
            <solid android:color="@color/mainColor" />
        </shape>
    </item>

</layer-list>